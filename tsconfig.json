{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,              // Disables all strict type checking options
    "noImplicitAny": false,       // Specifically allows implicit any types
    "strictNullChecks": true,     // Still check for null/undefined errors
    "strictFunctionTypes": true,  // Still check function types
    "strictBindCallApply": true,  // Still check bind/call/apply usage
    "strictPropertyInitialization": true, // Still check property initialization
    "noImplicitThis": true,       // Still check for this context errors
    "useUnknownInCatchVariables": true, // Still use unknown for catch clause variables
    "alwaysStrict": true,         // Still emit "use strict"
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}